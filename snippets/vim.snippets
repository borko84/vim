snippet header
	" File: ${1:`expand('%:t')`}
	" Author: ${2:`g:snips_author`}
	" Description: ${3}
	${4:" Last Modified: `strftime("%B %d, %Y")`}
#---------------------------------------------------------------------------
snippet guard
	if exists('${1:did_`Filename()`}') || &cp${2: || version < 700}
		finish
	endif
	let $1 = 1${3}
#---------------------------------------------------------------------------
snippet function
	fun ${1:function_name}(${2})
	    ${3:" code}
	endf
#---------------------------------------------------------------------------
snippet echo
	echo "${1}"${2}

#-------------------------------------------------------------------------------
snippet for
	for ${1:needle} in ${2:haystack}
	    ${3:" code}
	endfor
#---------------------------------------------------------------------------
snippet wh
	while ${1:condition}
	    ${2:" code}
	endw
#---------------------------------------------------------------------------
snippet if
	if ${1:condition}
	    ${2:" code}
	endif
#---------------------------------------------------------------------------
snippet ife
	if ${1:condition}
	    ${2}
	else
	    ${3}
	endif
#---------------------------------------------------------------------------
snippet toggle
	let g:${1:quickfix}_flag = 0
	
	function! $1Toggle()
	    if g:$1_flag
	         ${2:"call $1Off()}
	        let g:$1_flag = 0
	    else
	        ${2:"call $1On()}
	        let g:$1_flag = 1
	    endif
	endfunction
	
	map ${3:"key"} :call $1Toggle()<CR>
