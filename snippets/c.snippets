snippet main
	#include <iostream>


	int main(${1:int argc, const char *argv[]})
	{
	    ${2}
	    return 0;
	}
#-------------------------------------------------------------------------------
# include <...>
#-------------------------------------------------------------------------------
snippet inc <
	#include <${1:stdio.h}>
#-------------------------------------------------------------------------------
# include "..."
#-------------------------------------------------------------------------------
snippet inc "
	#include "${1:`Filename("$1.h")`}"${2}
#-------------------------------------------------------------------------------
# #ifndef ... #define ... #endif
#-------------------------------------------------------------------------------
snippet Def
	#ifndef $1
	#define ${1:SYMBOL} ${2:value}
	#endif${3}
snippet def
	#define
snippet ifdef
	#ifdef ${1:FOO}
	    ${2:#define }
	#endif
snippet #if
	#if ${1:FOO}
	    ${2}
	#endif
