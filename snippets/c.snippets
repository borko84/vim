#-------------------------------------------------------------------------------
# bit
#-------------------------------------------------------------------------------
snippet bit simple
	x << 7;             //move left
	(x & 0x01) !=0      //check if lowest bit is set
snippet bit complex
	//char[] ---> uint32_t
	uint64_t ip_address;
	unsigned char octet[4] = {127,0,0,1};
	for (int i=0; i<4; i++) {
		ip_address += ( octet[3-i] << (i*8) );
	}

	//uint32_t ---> char[]
	for (int i=0; i<4; i++) {
		std::cout << i << ": " << ( (ip_address >> 8*i) & 0x000000FF  ) << "\n" ;
	}
#-------------------------------------------------------------------------------
# char_array
#-------------------------------------------------------------------------------
snippet char_array
	char *s[]={"Jan","Feb","Mar","April"};
	char** p = s;

	for( unsigned n = 0; n < 4; ++n ) {
		printf("%s\n", *p );
		++p;
	}
